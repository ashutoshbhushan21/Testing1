from bs4 import BeautifulSoup, NavigableString, Tag

def get_soup_between_tags(subsection, start_tag, end_tag=None):
    """
    Creates a BeautifulSoup object containing elements between two specific tags within a subsection of a soup.

    Args:
    subsection (bs4.element.Tag): The subsection of the soup to search within.
    start_tag (bs4.element.Tag): The starting tag.
    end_tag (bs4.element.Tag): The ending tag.

    Returns:
    BeautifulSoup: A new soup object containing elements between the start_tag and end_tag within the subsection.
    """
    elements = []
    current_tag = start_tag
    if end_tag:
        while current_tag and current_tag != end_tag:
            if isinstance(current_tag, (NavigableString, Tag)):
                elements.append(current_tag)
            current_tag = current_tag.find_next_sibling()
    else:
        while current_tag:
            if isinstance(current_tag, (NavigableString, Tag)):
                elements.append(current_tag)
            current_tag = current_tag.find_next_sibling()

    # Creating a new soup object with the collected elements
    new_soup = BeautifulSoup('', 'html.parser')
    for element in elements:
        new_soup.append(element)

    return new_soup
